            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <CheckBox fx:id="smallCheckBox" layoutX="383.0" layoutY="47.0" mnemonicParsing="false" selected="true" stylesheets="@style.css" text="Small Letters" GridPane.rowIndex="1">
               <font>
                  <Font size="18.0" />
               </font>
            </CheckBox>
            <CheckBox fx:id="numbersCheckBox" layoutX="383.0" layoutY="95.0" mnemonicParsing="false" selected="true" stylesheets="@style.css" text="Numbers" GridPane.rowIndex="2">
               <font>
                  <Font size="18.0" />
               </font>
            </CheckBox>
            <TextField fx:id="quantityTextField" layoutX="383.0" layoutY="254.0" prefHeight="37.0" prefWidth="160.0" promptText="Amount" GridPane.rowIndex="5">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <TextField fx:id="lengthTextField" layoutX="383.0" layoutY="189.0" prefHeight="37.0" prefWidth="160.0" promptText="Length" GridPane.rowIndex="4">
