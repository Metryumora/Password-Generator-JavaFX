            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveToFile" prefWidth="100.0" stylesheets="@style.css" text="Save" GridPane.halignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#clearTA" prefWidth="100.0" text="Clear" GridPane.columnIndex="1" GridPane.halignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </GridPane>
